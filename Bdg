  <h2>BDG Predictor Login</h2>
  <input id="id" placeholder="e-mail / phone" />
  <button onclick="go()">Login</button>
  <div id="result"></div>

  <script>
    function go() {
      const v = document.getElementById('id').value.trim();
      if (!v) return alert('Enter something');
      document.getElementById('result').innerText = 'Captured: ' + v;
    }
  </script>
